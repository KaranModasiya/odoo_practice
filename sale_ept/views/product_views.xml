<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<!--	PRODUCT UOM VIEWS    -->

	<!--	TREE VIEW    -->
	<record id="view_product_tree" model="ir.ui.view">
		<field name="name">product.tree</field>
		<field name="model">product.ept</field>
		<field name="arch" type="xml">
			<tree string="Product">
				<field name="name"/>
				<field name="sku"/>
				<field name="barcode"/>
				<field name="product_type"/>
				<field name="category_id"/>
				<field name="uom_id"/>
				<field name="product_stock"/>
			</tree>
		</field>
	</record>


	<!--	FORM VIEW    -->
	<record id="view_product_form" model="ir.ui.view">
		<field name="name">product.form</field>
		<field name="model">product.ept</field>
		<field name="arch" type="xml">
			<form string="Product">
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="sku"/>
							<field name="barcode"/>
						</group>
						<group>
							<field name="product_type"/>
							<field name="sale_price"/>
							<field name="cost_price"/>
						</group>
					</group>
					<notebook>
						<page string="Properties">
							<group>
								<group>
									<field name="category_id" options="{'no_create': True, 'no_open': True}"/>
									<field name="uom_id" options="{'no_create': True, 'no_open': True}"/>
									<field name="product_stock"/>
								</group>
								<group>
									<field name="weight"/>
									<field name="length"/>
									<field name="width"/>
									<field name="volume"/>
								</group>
							</group>
						</page>
						<page string="Description">
							<field name="description"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>


	<!--	SEARCH VIEW    -->
	<record id="view_product_search" model="ir.ui.view">
		<field name="name">product.search</field>
		<field name="model">product.ept</field>
		<field name="arch" type="xml">
			<search string="Product">
				<field name="name"/>
				<field name="sku"/>
				<field name="barcode"/>
			</search>
		</field>
	</record>



	<!--	PRODUCT ACTION    -->

	<record id="product_action" model="ir.actions.act_window">
		<field name="name">Products</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.ept</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="view_product_search"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No records are available to show.
			</p>
		</field>
	</record>
</odoo>